{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      // Viteì—ì„œ path alias(@/...) ì“°ë©´ ì•„ë˜ typescript resolverë„ ì¼œì£¼ë©´ ì¢‹ìŒ
      "typescript": {}
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    // í•­ìƒ ë§ˆì§€ë§‰ì— prettier
    "prettier"
  ],
  "plugins": ["@typescript-eslint", "react", "react-hooks"],
  "rules": {
    // ğŸ”¹ React/Vite í™˜ê²½ì—ì„œ í˜„ì‹¤ì ìœ¼ë¡œ ë§ì´ ë„ëŠ”/ì™„í™”í•˜ëŠ” ë£°ë“¤
    "react/react-in-jsx-scope": "off", // Vite + React 17+ì—ì„œ í•„ìš” ì—†ìŒ
    "react/jsx-props-no-spreading": "off",
    "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }],

    // ğŸ”¹ import ê´€ë ¨ (ìƒí™©ì— ë”°ë¼ ì¡°ì •)
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",

    // ğŸ”¹ unused import ìë™ ê´€ë¦¬
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],

    // ğŸ”¹ simple-import-sort ë¡œ import ì •ë ¬
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",

    // ê¸°ë³¸ no-unused-varsëŠ” ë„ê³ , unused-importsê°€ ëŒ€ì²´
    "no-unused-vars": "off"
  }
}
